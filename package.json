{
  "name": "mcp-notion",
  "version": "1.0.0",
  "description": "Notion MCP Server - Model Context Protocol server for Notion API",
  "type": "module",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "build:clean": "rm -rf build && npm run build",
    "dev": "tsx src/index.ts",
    "lint:check": "npm run lint:programs:check && npm run lint:documents:check",
    "lint:fix": "npm run lint:programs:fix && npm run lint:documents:fix",
    "lint:programs:check": "biome check .",
    "lint:programs:fix": "biome check --write .",
    "lint:documents:check": "markdownlint-cli2 '**/*.md'",
    "lint:documents:fix": "markdownlint-cli2 --fix '**/*.md'",
    "test": "vitest run",
    "prepare": "husky"
  },
  "keywords": [
    "mcp",
    "notion",
    "api",
    "server"
  ],
  "author": "acckkiie",
  "license": "AGPL-3.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@notionhq/client": "^2.2.15",
    "config": "^3.3.12",
    "https-proxy-agent": "^7.0.6",
    "log4js": "^6.9.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/config": "^3.3.5",
    "@types/node": "^22.10.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "markdownlint-cli2": "^0.16.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "npx biome check --write"
    ],
    "**/*.md": [
      "npx markdownlint-cli2 --fix"
    ]
  }
}
