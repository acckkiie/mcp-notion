{
  "notion": {
    "apiKey": "env:NOTION_API_KEY",
    "apiVersion": "2022-06-28",
    "requestTimeout": 30000,
    "retryAttempts": 3
  },
  "api": {
    "pages": {
      "defaultLimit": 100
    },
    "databases": {
      "defaultLimit": 100
    },
    "blocks": {
      "defaultLimit": 100
    }
  },
  "logger": {
    "appenders": {
      "console": {
        "type": "console",
        "layout": {
          "type": "pattern",
          "pattern": "{\"timestamp\":\"%d{ISO8601}\",\"level\":\"%p\",\"message\":%m}"
        }
      },
      "file": {
        "type": "dateFile",
        "filename": "log/application.log",
        "pattern": "yyyy-MM-dd",
        "maxLogSize": 10485760,
        "numBackups": 3,
        "compress": true,
        "layout": {
          "type": "pattern",
          "pattern": "{\"timestamp\":\"%d{ISO8601}\",\"level\":\"%p\",\"message\":%m}"
        }
      }
    },
    "categories": {
      "default": {
        "appenders": ["console"],
        "level": "info"
      }
    }
  }
}
